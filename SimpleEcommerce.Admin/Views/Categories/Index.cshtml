@using SimpleEcommerce.Application.Features.Catagory.Queries.GetCategories
@model List<CatagoryListVM>
<p>
    <a asp-action="Add" asp-controller="Categories" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
            </tr>
        }
    </tbody>
</table>
